rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for user resume uploads
    match /resumes/{userId}/{resumeId} {
      // Allow authenticated users to upload their own resumes
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow read access to resume content for the owner
      allow read: if request.auth != null && request.auth.uid == userId;
    }
    
    // Temporary rule for development - allow authenticated uploads
    match /resumes/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Fallback rule - deny by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
